<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteBlue"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_shape_10dp_corners"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/blue_shape_10dp_corners"
            android:text="药"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="40dp">
            <ImageView
                android:id="@+id/iv_userInfo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/avatar" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_manageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新增药品/管理药品"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_shape_10dp_corners"
        android:orientation="vertical"
        android:padding="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="药品名称"
            android:paddingBottom="10dp"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_blank_10dp_corners"
            android:hint="请输入药品名称"
            android:padding="10dp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="药品种类"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="14dp"/>
        <Spinner
            android:id="@+id/sp_type"
            android:entries="@array/drugs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_blank_10dp_corners"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="价格"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_blank_10dp_corners"
            android:hint="请输入价格"
            android:text="0.00"
            android:digits="1234567890."
            android:padding="10dp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="库存余量"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="14dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_cut"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:background="@drawable/blue_round"/>
            <EditText
                android:id="@+id/et_quantity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_blank_10dp_corners"
                android:hint="请输入库存余量"
                android:text="0"
                android:digits="1234567890"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:singleLine="true"/>
            <Button
                android:id="@+id/btn_plus"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:background="@drawable/blue_round"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/blue_shape_10dp_corners"
                android:text="上架"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btn_clean"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/blue_shape_10dp_corners"
                android:text="重置"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/blue_shape_10dp_corners"
                android:text="修改"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/red_shape_10dp_corners"
                android:text="下架"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btn_return"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blue_shape_10dp_corners"
                android:text="返回"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>