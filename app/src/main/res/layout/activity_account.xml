<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteBlue"
    android:orientation="vertical"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_shape_10dp_corners"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/blue_shape_10dp_corners"
            android:text="药"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="40dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/avatar" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="账号管理"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_shape_10dp_corners"
        android:orientation="vertical"
        android:padding="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/et_oldPSW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_blank_10dp_corners"
            android:inputType="textPassword"
            android:hint="请输入旧密码"
            android:padding="10dp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/et_newPSW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_blank_10dp_corners"
            android:inputType="textPassword"
            android:hint="请输入新密码"
            android:padding="10dp"
            android:singleLine="true"/>

        <Button
            android:id="@+id/btn_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_shape_10dp_corners"
            android:text="修改密码"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_shape_10dp_corners"
            android:text="返回"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/blue_shape_10dp_corners"
            android:text="退出登录"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn_delAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/red_shape_10dp_corners"
            android:text="注销账号"
            android:textSize="18dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
